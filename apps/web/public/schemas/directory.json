{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://registry.directory/schemas/directory.json",
  "title": "Registry Directory",
  "description": "Collection of shadcn/ui component registries",
  "type": "object",
  "required": ["registries"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "registries": {
      "type": "array",
      "description": "List of registry entries",
      "items": {
        "type": "object",
        "required": ["name", "description", "url"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Display name of the registry",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Brief description of what this registry provides",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Homepage URL of the registry",
            "pattern": "^https://"
          },
          "github_url": {
            "type": "string",
            "format": "uri",
            "description": "GitHub repository URL",
            "pattern": "^https://github\\.com/"
          },
          "github_profile": {
            "type": "string",
            "format": "uri",
            "description": "GitHub profile image URL",
            "pattern": "^https://"
          },
          "registry_url": {
            "type": "string",
            "format": "uri",
            "description": "Direct URL to registry.json file (if different from url/r/registry.json)",
            "pattern": "^https://"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
